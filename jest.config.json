{
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  },
  "moduleFileExtensions": ["ts","js"],
  "transform": {
    "^.+\\.(ts|tsx)$": ["ts-jest", { "tsconfig": "tsconfig.spec.json" }]
  },
  "testMatch": [
    "**/*.(test|spec|e2e).(ts|js)"
  ],
  "testEnvironment": "node"
}
